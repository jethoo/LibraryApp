<%- include ('../partials/header') %>
<div class="container my-5">
    <header>
        <h1><%= books.title %>
            <a href="/books/<%= books.id %>/edit">
                <i class="fa fa-edit"></i>
            </a>
        </h1>
        <br>
        <small><%= books.updatedAt.toLocaleString("en-CA") %></small>
        <p> <% if(typeof books.user !== 'undefined') { %> 
            <strong>By: <%= books.user.fullname%></strong>
            <% } %>
        </p>
    </header>
    <hr>
    <div class="showContent">
        <%- books.format %>
    </div>
</div>
<%- include ('../partials/footer') %>